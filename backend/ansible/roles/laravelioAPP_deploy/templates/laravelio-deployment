---
# Deployment for deploying laravelio
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ app_name }}
  namespace: {{ ascn_namespace }}
  labels:
    app: {{ app_name }}
spec:
  replicas: {{ laravel_deploy_n_replicas }}
  selector:
    matchLabels:
      app: {{ app_name }}
  template:
    metadata:
      labels:
        app: {{ app_name }}
    spec:
      containers:
      - name: {{ app_name }}
        image: hiddenduck/laravel
        env:
        - name: DB_CONNECTION
          value: {{ db_connection_name }}
        - name: DB_HOST
          value: {{ db_service_name }}
        - name: DB_DATABASE
          value: {{ db_database_name }}
        - name: DB_USERNAME
          value: {{ db_username }}
        - name: DB_PASSWORD
          value: "{{ db_password }}" # Use secret object in real usage
        - name: MIGRATE
          value: "{{ migrate }}"
        - name: BUILD
          value: "{{ build }}"
        - name: SEED
          value: "{{ seed_database | default("false") }}"
        ports:
        - containerPort: {{ laravel_container_port }}
